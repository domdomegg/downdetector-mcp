{
  "name": "downdetector-mcp",
  "version": "1.0.1",
  "description": "MCP server for Downdetector - check service status and outage information",
  "license": "MIT",
  "author": "Adam Jones (domdomegg)",
  "repository": {
    "type": "git",
    "url": "git@github.com:domdomegg/downdetector-mcp.git"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": "dist/main.js",
  "files": [
    "dist"
  ],
  "mcpName": "io.github.domdomegg/downdetector-mcp",
  "scripts": {
    "start": "npm run build && node dist/main.js",
    "start:http": "npm run build && MCP_TRANSPORT=http node dist/main.js",
    "test": "vitest run",
    "test:watch": "vitest --watch",
    "lint": "eslint",
    "clean": "rm -rf dist",
    "build": "tsc --project tsconfig.build.json",
    "build:mcpb": "./build-mcpb.sh",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.24.3",
    "downdetector-api": "^2.1.0",
    "express": "^5.2.1",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@tsconfig/node-lts": "^24.0.0",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "eslint": "^9.39.1",
    "eslint-config-domdomegg": "^2.0.9",
    "tsconfig-domdomegg": "^1.0.0",
    "typescript": "^5.9.3",
    "vitest": "^4.0.15"
  }
}
